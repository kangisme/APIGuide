<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage">

    <ImageView
        android:id="@+id/music_icon"
        android:src="@mipmap/music_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_toRightOf="@id/music_icon"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/music_title"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            tools:text="我好像在哪见过你（电影《精灵王座》主题曲）"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/music_author"
            android:layout_marginTop="8dp"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            tools:text="薛之谦 - 初学者"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginBottom="1dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageButton
                android:contentDescription="@null"
                android:background="@drawable/button_pressed_style"
                android:src="@mipmap/notification_like_red"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageButton
                android:contentDescription="@null"
                android:background="@drawable/button_pressed_style"
                android:src="@mipmap/notification_pre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageButton
                android:contentDescription="@null"
                android:background="@drawable/button_pressed_style"
                android:src="@mipmap/notification_pause"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageButton
                android:contentDescription="@null"
                android:background="@drawable/button_pressed_style"
                android:src="@mipmap/notification_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageButton
                android:contentDescription="@null"
                android:background="@drawable/button_pressed_style"
                android:src="@mipmap/notification_liyric_gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:contentDescription="@null"
        android:background="@drawable/button_pressed_style"
        android:layout_alignParentRight="true"
        android:src="@mipmap/notification_close"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>