<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="屏幕旋转并不会导致Activity重建"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="图层列表LayerDrawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:contentDescription="@null"
        android:src="@drawable/layer_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="级别列表LevelListDrawable(点击转换Level)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/level_list"
        android:contentDescription="@null"
        android:src="@drawable/level_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="插入可绘制对象InsertDrawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:background="@color/black"
        android:src="@drawable/insert_drawable"
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>