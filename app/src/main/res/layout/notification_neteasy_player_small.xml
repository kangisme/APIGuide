<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:ignore="SpUsage">

    <ImageView
        android:contentDescription="@null"
        android:src="@mipmap/music_icon"
        android:scaleType="fitXY"
        android:layout_width="70dp"
        android:layout_height="64dp"/>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="64dp">

        <TextView
            android:id="@+id/music_title"
            tools:text="我好像在哪见过你（电影《精灵王座》主题曲）"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/music_author"
            android:layout_marginTop="10dp"
            tools:text="薛之谦 - 初学者"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageButton
        android:contentDescription="@null"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:src="@mipmap/notification_pause"
        android:background="@drawable/button_pressed_style"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <ImageButton
        android:contentDescription="@null"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:src="@mipmap/notification_next"
        android:background="@drawable/button_pressed_style"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <ImageButton
        android:contentDescription="@null"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:src="@mipmap/notification_lyric_gray"
        android:background="@drawable/button_pressed_style"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <ImageButton
        android:contentDescription="@null"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:src="@mipmap/notification_close"
        android:background="@drawable/button_pressed_style"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="50dp"/>
</LinearLayout>